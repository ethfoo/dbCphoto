<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

    >



    <com.ethfoo.dbphoto.ui.misc.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/listHeader_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
         />

    </com.ethfoo.dbphoto.ui.misc.SquareFrameLayout>

    <LinearLayout
        android:id="@+id/listHeader_item_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/listHeader_item_shareImage"

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/listHeader_item_shareNum"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="0"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/listHeader_item_likedImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/listHeader_item_likedNum"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:id="@+id/listHeader_item_descLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:background="#EAEAEA"></View>
        <TextView
            android:id="@+id/listHeader_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/listHeader_item_commentCount"
        android:text="all 0 comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/listHeader_item_commentLayoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></LinearLayout>



</LinearLayout>
